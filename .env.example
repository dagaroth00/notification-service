# Server configuration
PORT=4000

# Database (Prisma)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Redis configuration
REDIS_URL=redis://localhost:6379

# JWT configuration
JWT_SECRET=your_jwt_secret_here

# AWS Cognito configuration
AWS_REGION=your_aws_region_here
COGNITO_USER_POOL_ID=your_cognito_user_pool_id_here
COGNITO_APP_CLIENT_ID=your_cognito_app_client_id_here

# Authentication toggle
DISABLE_AUTH=true

# Logging
LOG_LEVEL=info

# Request-level logging controls
# Set to 'false' to disable per-request logging (default enabled)
REQUEST_LOG_ENABLED=true
# Optional: override request log level (info|debug|warn|error)
REQUEST_LOG_LEVEL=info

# Other optional settings
# SOCKET_REDIS_HOST=localhost
# SOCKET_REDIS_PORT=6379
